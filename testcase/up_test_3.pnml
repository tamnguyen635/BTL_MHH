      <place id="p_buffer_empty"> <initialMarking><text>1</text></initialMarking> </place>
      <place id="p_buffer_full"> </place>

      <place id="p_prod_ready"> <initialMarking><text>1</text></initialMarking> </place>
      <place id="p_prod_working"> </place>
      
      <transition id="t_start_produce"></transition>
      <transition id="t_finish_produce"></transition>

      <place id="p_cons_ready"> <initialMarking><text>1</text></initialMarking> </place>
      <place id="p_cons_eating"> </place>

      <transition id="t_start_consume"></transition>
      <transition id="t_finish_consume"></transition>

      <arc id="a1" source="p_prod_ready" target="t_start_produce"/>
